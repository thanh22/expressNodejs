extends ../layouts/common

block content 
    h1 Create user 
    if errors
        each error in errors 
            .alert.alert-danger= error

    form(action="/users/create", method="POST")
        .form-group
            label(for='exampleInputName1') Name
            input#exampleInputName1.form-control(type="text", name="name", value=values ? values.name : "")
        .form-group
            label(for='exampleInputPhone1') Phone
            input#exampleInputPhone1.form-control(type='text', name="phone", value=values ? values.phone : "")
        button.btn.btn-primary(type='submit') Create